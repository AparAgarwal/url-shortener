<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage URLs - URL Shortener</title>
    <link rel="stylesheet" href="/manage.css">
</head>

<body class="page-body">
    <div class="management-container">
        <div class="header">
            <h1>üìä Manage URLs</h1>
            <a href="/" class="back-btn">‚Üê Back to Home</a>
        </div>

        <div class="stats">
            <div class="stat-card">
                <div class="stat-number">
                    <%= urls.length %>
                </div>
                <div class="stat-label">Total URLs</div>
            </div>
        </div>

        <% if (urls.length> 0) { %>
            <table class="urls-table">
                <thead>
                    <tr>
                        <th>Short ID</th>
                        <th>Original URL</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index)=> { %>
                        <tr>
                            <td>
                                <span class="short-id">
                                    <%= url.shortId %>
                                </span>
                            </td>
                            <td>
                                <div class="redirect-url">
                                    <%= url.redirectUrl %>
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-copy" onclick="copyShortId('<%= url.shortId %>', this)">
                                        üìã Copy
                                    </button>
                                    <button class="btn-delete" onclick="deleteUrl('<%= url.shortId %>')">
                                        üóëÔ∏è Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <% } else { %>
                <div class="empty-state">
                    <p>No URLs created yet</p>
                    <a href="/" class="empty-link">Create your first URL ‚Üí</a>
                </div>
                <% } %>
    </div>

    <script>
        function copyShortId(shortId, button) {
            const fullUrl = `http://localhost:3000/url/${shortId}`;
            const originalText = button.innerText;

            navigator.clipboard.writeText(fullUrl)
                .then(() => {
                    button.innerText = '‚úì';
                    button.classList.add('copied');

                    setTimeout(() => {
                        button.innerText = originalText;
                        button.classList.remove('copied');
                    }, 2000);
                })
                .catch(() => {
                    button.innerText = '‚ùå Failed';
                    setTimeout(() => {
                        button.innerText = originalText;
                    }, 2000);
                });
        }

        function deleteUrl(shortId) {
            if (confirm('Are you sure you want to delete this URL?')) {
                fetch(`/url/${shortId}`, {
                    method: 'DELETE'
                })
                    .then(response => response.json())
                    .then(data => {
                        location.reload();
                    })
                    .catch(error => {
                        alert('Error deleting URL: ' + error);
                    });
            }
        }
    </script>
</body>

</html>