<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <a class="profile" href="/profile">
        <div class="avatar"><img src="<%= locals.user.avatarUrl %>" alt=""></div>
        <span class="name"><%= locals.user.username %>!</span>
    </a>
    <div class="container">
        <h1>ğŸ”— URL Shortener</h1>
        <p class="subtitle">Get your URL shortened in a click</p>

        <% if (locals.error) { %>
            <div class="error-message">
                âŒ <%= error %>
            </div>
        <% } %>

        <% if (locals.id) { %>
            <div class="success-message">
                Your shortened URL is ready!
            </div>
            <div class="shortened-url-wrapper">
                <div class="shortened-url" id="shortenedUrl">
                    <%= baseUrl %>/<%= id %>
                </div>
                <button class="copy-btn" onclick="copyToClipboard(event)">ğŸ“‹</button>
            </div>
        <% } %>

        <form method="POST" action="/url">
            <div class="form-group">
                <label for="redirectUrl">Enter your original URL</label>
                <input 
                    type="text" 
                    id="redirectUrl"
                    name="redirectUrl" 
                    placeholder="https://example.com"
                    value="<%= locals.redirectUrl || '' %>"
                    required
                >
            </div>
            <div class="expiry-btn">
                <label for="expiry">Set Expiry Time:</label>
                <span data-value="3600">1 Hour</span>
                <span data-value="86400">1 Day</span>
                <span data-value="604800">1 Week</span>
                <span data-value="0">Never</span>
            </div>
            <button type="submit">Generate Shortened URL</button>
        </form>

        <p class="info-text">Your URL will be shortened and ready to share instantly!</p>

        <div class="management-link">
            <a href="/manage-urls">ğŸ“Š View All URLs & Manage</a>
        </div>
    </div>

    <script>
        function copyToClipboard(event) {
            const urlElement = document.getElementById('shortenedUrl');
            const text = urlElement.innerText;
            
            navigator.clipboard.writeText(text).then(() => {
                const button = event.target;
                const originalText = button.innerText;
                
                button.innerText = 'âœ“';
                button.classList.add('copied');
                
                setTimeout(() => {
                    button.innerText = originalText;
                    button.classList.remove('copied');
                }, 2000);
            }).catch(() => {
                alert('Failed to copy URL');
            });
        }

        const expiryButtons = document.querySelectorAll('.expiry-btn span');
        const expiryInput = document.createElement('input');
        expiryInput.type = 'hidden';
        expiryInput.name = 'expiry';
        document.querySelector('form').appendChild(expiryInput);

        expiryButtons.forEach(button => {
            button.addEventListener('click', () => {
                expiryButtons.forEach(btn => btn.removeAttribute('selected'));
                button.setAttribute('selected', '');
                expiryInput.value = button.getAttribute('data-value');
            });
        });

        // Set default expiry value if available
        if (expiryInput.value === '') {
            expiryInput.value = '3600'; // Default to 1 Hour
            expiryButtons[0].setAttribute('selected', '');
        }
    </script>
</body>
</html>